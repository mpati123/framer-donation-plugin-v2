{
  "outputDirectory": "plugins/framer/dist",
  "rewrites": [
    { "source": "/admin", "destination": "/admin/index.html" },
    { "source": "/admin/", "destination": "/admin/index.html" },
    { "source": "/api/webhook", "destination": "/api/donation-webhook/index.ts" },
    { "source": "/api/campaigns", "destination": "/api/campaigns/[[...path]]" },
    { "source": "/api/campaigns/:id", "destination": "/api/campaigns/[[...path]]?id=:id" }
  ],
  "functions": {
    "api/license/webhook.ts": {
      "includeFiles": "api/license/**"
    },
    "api/donation-webhook/index.ts": {
      "includeFiles": "api/donation-webhook/**"
    }
  },
  "crons": [
    {
      "path": "/api/cron/reminders",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/keepalive",
      "schedule": "0 12 * * *"
    }
  ]
}
